{
    "name": "vscode-hugo",
    "displayName": "vscode-hugo",
    "description": "Helper for Hugo static site generator",
    "version": "0.0.1",
    "publisher": "rusnasonov",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/main",
    "contributes": {
        "commands": [
            {
                "command": "hugo.version",
                "title": "Hugo: version"
            },
            {
                "command": "hugo.createContent",
                "title": "Hugo: create content"
            },
            {
                "command": "hugo.runServer",
                "title": "Hugo: run debug server"
            },
            {
                "command": "hugo.remoteVersion",
                "title": "Hugo: get remote version"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "opn": "^5.2.0",
        "request": "^2.83.0"
    }
}
